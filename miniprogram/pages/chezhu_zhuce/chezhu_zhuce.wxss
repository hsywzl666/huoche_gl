/* 顶部 */

.top {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  line-height: 80rpx;
  font-size: 34rpx;
  border-bottom: 1px solid #000;
}

.top-text {
  float: left;
}

/* 下拉框 */
input{ 
  outline-style: none ;
 
  height: 80rpx;
  width: 500rpx;
  font-size: 60rpx;
  font-weight: 900
}
.top-selected {
  width: 60rpx;
  display: flex;
  float:  left;
  align-items: center;
  justify-content: space-between;
  font-weight: 900;
  padding: 0 10rpx;
  font-size: 60rpx;
}

/* 下拉内容 */

.select_box {
  background-color: #fff;
  padding: 0 20rpx;
  width:60rpx;
  float:  left;
  position: relative;
  right: 0;
  z-index: 1;
  overflow: hidden;
  text-align: left;
  animation: myfirst 0.5s;
  font-size: 30rpx;
}

.select_one {
  padding-left: 20rpx;
  width: 100%;
  height: 60rpx;
  position: relative;
  line-height: 60rpx;
  border-bottom: 1px solid #ccc;
  font-size: 60rpx;
}

/* 下拉过度效果 */

@keyframes myfirst {
  from {
    height: 0rpx;
  }

  to {
    height: 210rpx;
  }
}

/* 下拉图标 */

.top-selected image {
  height: 50rpx;
  width: 50rpx;
  position: absolute;
  right: 0rpx;
  top: 20rpx;
}
